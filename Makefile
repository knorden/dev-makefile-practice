##########################################################################################
## THIS IS A TEST PROJECT								##
##########################################################################################
.SUFFIXES:
.SUFFIXES: .h .cpp
	
vpath %.cpp src
vpath %.h hdr

%.h : %.cpp

##########################################################################################
## BUILD TASKS										##
##########################################################################################

HDIR		:= hdr
SRCS		:= src
ODIR		:= out

EXE		:= a
OBJS		:= main.o mainhdr.o testcode.o

CPP		:= g++
CPPFLAGS	:= -I$(HDIR) -g -Wall -std=c++17

## BUILD DIRECTIVE:
all: $(EXE)

$(EXE): $(OBJS)
	$(CPP) -o %@ %^

%.o: %.cpp
	$(CPP) -c $< $(CPPFLAGS) -o $(ODIR)/$@

##########################################################################################
## CLEAN TASK										##
##########################################################################################
.PHONY: clean
clean:
	rm -r $(EXE) $(ODIR)/*.o

