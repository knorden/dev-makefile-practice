##########################################################################################
## THIS IS A TEST PROJECT								##
##########################################################################################
##########################################################################################
## BUILD TASKS										##
##########################################################################################
HDIR		:= hdr
SDIR		:= src
ODIR		:= obj

EXET		:= a
OBJS		:= main.o mainhdr.o testcode.o
OSRC		:= $(addprefix $(ODIR)/, $(OBJS))

CXX		:= g++
CXXFLAGS	:= -I$(HDIR) -g -Wall -std=c++17

## BUILD DIRECTIVE:
all: $(EXET)

$(EXET): $(OSRC)
	$(CXX) $(CXXFLAGS) $^ -o $@

$(ODIR)/%.o: $(SDIR)/%.cpp | $(ODIR)
	$(CXX) -c $(CXXFLAGS) $^ -o $@

$(ODIR):
	if [ ! -d $(ODIR) ]; then mkdir $(ODIR); fi


##########################################################################################
## CLEAN TASK										##
##########################################################################################
.PHONY: clean
clean:
	rm -r $(EXET) $(ODIR)
